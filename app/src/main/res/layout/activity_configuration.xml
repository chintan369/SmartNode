<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
        android:background="#024c57"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <!--<ImageView-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:padding="3dp"-->
            <!--android:src="@drawable/logo"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="#fff"
            android:text="CONFIGURATION"
            android:id="@+id/txt_smartnode"
            />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/img_setting"
            android:src="@drawable/setting_icon"
            android:layout_marginRight="10dp"
            android:padding="3dp"
        />



        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.DrawerLayout android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent"
        android:id="@+id/drawerlayout"
        xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
android:background="@drawable/background_gradient"
    tools:context="com.example.seo.myapplication.ConfigurationActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/wifi_symbol"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="No Device Found"
        android:textColor="#024c57"
        android:textSize="14sp"
        android:id="@+id/txt_1"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Please Configure Your Device First"
        android:textColor="#024c57"
        android:textSize="14sp"
        android:id="@+id/txt_2"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
android:drawableLeft="@drawable/small_icon"
        android:text="@string/configure"
        android:background="#024c57"
        android:textSize="14sp"
        android:textColor="#fff"
        android:id="@+id/btn_signup"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        />

</LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:background="#E4ECEE"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E4ECEE"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/logo_tagline"
                    android:padding="5dp"
                    />
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="#fff"-->
                <!--android:text="@string/toolbar_name"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:id="@+id/drawer_txt_1"-->
                <!--/>-->

            </LinearLayout>

            <GridView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/drawerlist"
                android:numColumns="2"
                android:columnWidth="120dp"
                android:horizontalSpacing="0dp"
                android:verticalSpacing="4dp"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:padding="0dp"
                android:background="#E4ECEE"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="#E4ECEE"
                >
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/logout"-->
                    <!--/>-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/logout_img"
                    android:src="@drawable/logout"
                    android:gravity="center"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Logout"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/logout_txt"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666"
                    />

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>